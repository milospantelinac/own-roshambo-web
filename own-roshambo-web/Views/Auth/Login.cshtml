@model OwnRoshamboWeb.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}
<h1 class="mb-4">Login</h1>
<form asp-action="Login" asp-controller="Auth" method="POST" class="w-50">
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(x => x.Email, new { @class = "label-form" })
        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Email, "", new { @class = "error-text text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Password, new { @class = "label-form" })
        @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Password, "", new { @class = "error-text text-danger" })
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Login</button>
    </div>
    <div>
        @Html.ValidationMessage("ErrorMsg", new { @class= "error-text text-danger" })
    </div>
</form>