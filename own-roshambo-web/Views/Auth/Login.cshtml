@model OwnRoshamboWeb.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}
<div class="container-login">
    <h1 class="mb-5">Login</h1>
    <form asp-action="Login" asp-controller="Auth" method="POST" class="w-25 font">
        @Html.AntiForgeryToken()
        <div class="form-group d-flex flex-column align-items-start">
            @Html.LabelFor(x => x.Email, new { @class = "label-form font-weight-bold" })
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = "Enter your email" })
            @Html.ValidationMessageFor(x => x.Email, "", new { @class = "error-text text-danger font-weight-bold" })
        </div>
        <div class="form-group d-flex flex-column align-items-start">
            @Html.LabelFor(x => x.Password, new { @class = "label-form font-weight-bold" })
            @Html.PasswordFor(x => x.Password, new { @class = "form-control", @placeholder = "Enter your password" })
            @Html.ValidationMessageFor(x => x.Password, "", new { @class = "error-text text-danger font-weight-bold" })
        </div>
        <div class="mt-5">
            <button type="submit" class="btn btn-red w-50">Login</button>
        </div>
        <div class="mt-2">
            @Html.ValidationMessage("ErrorMsg", new { @class = "error-text text-danger font-weight-bold" })
        </div>
        <div class="login-accounts-panel is-active">
            <div class="panel-inner">
                <div class="close-button">
                    &#x2715
                </div>
                <div class="header">
                    <h3 class="text-left">Demo Accounts</h3>
