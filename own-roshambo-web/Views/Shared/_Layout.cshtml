<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RoshamboApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <section class="container-main">
        <div class="main-logo d-flex align-items-center">
            <img src="~/images/microsoft-logo.png" width="25" />
            <a class="main-logo__text ml-2" asp-area="" asp-controller="Home" asp-action="Index">Ro<span class="site-dot">&#128308;</span>Sham<span class="site-dot">&#128308;</span>Bo</a>
        </div>
        @if (User.Identity.IsAuthenticated)
        {
            <div class="navbar-main navbar navbar-expand p-0">
                <div class="container">
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item ml-auto mr-2">
                                <a class="nav-link text-white btn btn-success" asp-area="" asp-controller="Auth" asp-action="Logout">New Game</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white btn btn-primary" asp-area="" asp-controller="Auth" asp-action="Logout">Logout</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        }
            @RenderBody()
            <footer>
                <p class="footer-text">Power by .NET 5 &#9889; SignalR</p>
            </footer>
        </section>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
